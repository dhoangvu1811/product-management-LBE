extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main
  h1(class="mb-4") Chỉnh sửa tài khoản

  +alert()
  if(roles)
    form(
    action=`${prefixAdmin}/accounts/edit/${record.id}?_method=PATCH` 
    method="post"
    enctype="multipart/form-data"
  )
      div(class="form-group")
        label(for="fullName") Họ tên *
        input(
          type="text"
          class="form-control"
          id="fullName"
          name="fullName"
          value=record.fullName
        )
      div(class="form-group")
        label(for="email") Email *
        input(
          type="text"
          class="form-control"
          id="email"
          name="email"
          value=record.email

        ) 
      div(class="form-group")
        label(for="password") Mật khẩu 
        input(
          type="text"
          class="form-control"
          id="password"
          name="password"
        ) 
      div(class="form-group")
        label(for="phone") Số điện thoại 
        input(
          type="text"
          class="form-control"
          id="phone"
          name="phone"
          value=record.phone

        ) 
      div(
        class="form-group"
        upload-image 
        )
        label(for="avatar") Avatar
        input(
          type="file"
          class="form-control-file"
          id="avatar"
          name="avatar"
          accept="image/*"
          upload-image-input
        )
        img(
          src=record.avatar
          upload-image-preview
          class="image-preview"
        )
        button(
          type="button"
          class="btn btn-outline-secondary btnDeletePreview"
          btn-delete-imagePreview
        ) Xoá ảnh
      div(class="form-group")
        label(for="role_id") Phân quyền
        select(name="role_id" id="role_id" class="form-control")
          option(disabled) --Chọn--
          if(roles)
            each item in roles  
              option(value=item._id selected=(item._id==record.role_id ? true : false) ) #{item.title}   
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusActive"
          name="status"
          value="active"
          checked=(record.status =="active" ? true : false)
        )
        label(for="statusActive" class="form-check-label") Hoạt động 
      div(class="form-group form-check form-check-inline")
        input(
          type="radio"
          class="form-check-input"
          id="statusInActive"
          name="status"
          value="inactive"
          checked=(record.status =="inactive" ? true : false)

        )
        label(for="statusInActive" class="form-check-label") Dừng hoạt động
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Chỉnh sửa

  else 
    p Vui lòng tạo nhóm quyền trước khi chỉnh sửa tài khoản
    p   
      a(href=`${prefixAdmin}/roles/create` class="btn btn-secondary") Tạo nhóm quyền    
