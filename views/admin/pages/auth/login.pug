extends ../../layouts/auth.pug
include ../../mixins/alert.pug


block main
  +alert()
  .container.my-5 
    .row.justify-content-center
      .col-8 
        h1(class="mb-4") Đăng nhập
        form(
          action=`${prefixAdmin}/auth/login`
          method='post'
        ) 
          div(class="form-group")
            label(for="email") Email
            input(
              type="text"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="password") Mật khẩu 
            input(
              type="text"
              class="form-control"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đăng nhập